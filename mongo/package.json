{
  "name": "mongo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "github": "nodemon -L --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "dev:types": "concurrently \"nodemon -L --exec ts-node -r tsconfig-paths/register src/index.ts\" \"tsc -w\"",
    "build": "tsc --build --clean && tsc --build",
    "start": "node -r esm dist/index.js",
    "test": "jest --collect-coverage",
    "mocha": "node ./node_modules/mocha/bin/mocha.js -r ts-node/register -r tsconfig-paths/register.js mocha/tests/**/*.spec.ts",
    "mergePdf": "node src/scripts/groupPdf.ts",
    "prettier": "pnpm dlx prettier . --write",
    "dev:esbuild": "nodemon --legacy-watch src --exec \"node esbuild.config.js && node dist/index.js\"",
    "build:esbuild": "node esbuild.config.js",
    "start:esbuild": "node dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.883.0",
    "@google-cloud/storage": "^7.17.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/morgan": "^1.9.10",
    "argon2": "^0.43.1",
    "cookie-parser": "~1.4.7",
    "debug": "~2.6.9",
    "dotenv": "^16.6.1",
    "esm": "^3.2.25",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "http-errors": "~1.6.3",
    "http-json-errors": "^1.2.12",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mkcert": "^3.2.0",
    "mongodb": "^6.19.0",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.5",
    "passport-local": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "redis": "^5.8.2",
    "safe-regex": "^2.1.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^30.1.2",
    "@shelf/jest-mongodb": "^5.2.2",
    "@types/chai": "^5.2.2",
    "@types/expect": "^24.3.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "@types/passport-local": "^1.0.38",
    "chai": "npm:@esm-bundle/chai@4.3.4-fix.0",
    "esbuild": "^0.25.9",
    "jest": "^30.1.3",
    "mocha": "^11.7.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^4.9.5",
    "typescript-require": "^0.3.0"
  }
}
